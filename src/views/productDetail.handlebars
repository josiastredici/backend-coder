    }

    .btn-secondary {
        background: #6c757d;
        color: white;
        margin-top: 10px;
    }

    .btn:hover {
        opacity: 0.9;
    }

    @media (max-width: 768px) {
        .product-detail {
            grid-template-columns: 1fr;
        }
