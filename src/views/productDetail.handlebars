<div class="container">
    <div class="product-detail">
        <div class="product-images">
            {{#if product.thumbnails.length}}
                {{#each product.thumbnails}}
                    <img src="{{this}}" alt="{{../product.title}}">
                {{/each}}
            {{else}}
                <div class="no-image">Sin imagen</div>
            {{/if}}
        </div>

        <div class="product-info">
            <h1>{{product.title}}</h1>
            <p class="product-code">Código: {{product.code}}</p>
            
            <div class="product-description">
                <h3>Descripción</h3>
                <p>{{product.description}}</p>
            </div>

            <div class="product-details">
                <p><strong>Categoría:</strong> {{product.category}}</p>
                <p><strong>Stock disponible:</strong> {{product.stock}} unidades</p>
                <p><strong>Estado:</strong> 
                    {{#if product.status}}
                        <span class="badge success">Disponible</span>
                    {{else}}
                        <span class="badge danger">No disponible</span>
                    {{/if}}
                </p>
            </div>

            <div class="product-price">
                <h2>${{product.price}}</h2>
            </div>

            <div class="product-actions">
                <label>Cantidad:
                    <input type="number" id="quantity" value="1" min="1" max="{{product.stock}}">
                </label>
                <button onclick="addToCart('{{product._id}}')" class="btn btn-primary btn-large">
                    Agregar al carrito
                </button>
            </div>

            <a href="/products" class="btn btn-secondary">← Volver a productos</a>
        </div>
    </div>
</div>

<style>
